<div id="form">
  <div id="form_inner">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

      <%= f.label :email, 'Электронная почта' %>
      <div style="border: 1px solid rgb(255, 255, 255); margin-bottom: 20px;">
        <%= f.text_field :email, :class => 'text_field' %>
      </div>

      <%= f.label :password, 'Пароль' %>
      <div style="border: 1px solid rgb(255, 255, 255); margin-bottom: 30px;">
        <%= f.password_field :password, :class => 'text_field'%>
      </div>

      <div>
        <% if devise_mapping.rememberable? -%>
          <span class="nolabel"><%= f.check_box :remember_me %> <%= f.label :remember_me, 'Запомнить' %></span>
        <% end -%>
        <%= f.submit "Войти", :class => 'big_button' %>
      </div>
    <% end %>
  </div>
</div>
